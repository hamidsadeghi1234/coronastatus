<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/side_nav_bar"
    tools:context=".Views.Activities.ContinentsActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline50percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="190dp" />
    <TextView
        android:id="@+id/world_count_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn"
        android:textAlignment="center"
        android:layout_margin="5dp"
        android:text="world_count_tv"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="@id/guideline50percent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/word_percents_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn"
        android:layout_margin="5dp"
        android:text="word_percents_tv"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline50percent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="40dp" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/world_count_tv"
        app:layout_constraintVertical_bias="0.0">


    </com.github.mikephil.charting.charts.PieChart>



</androidx.constraintlayout.widget.ConstraintLayout>